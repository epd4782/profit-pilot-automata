
# ====================================
# TRADING BOT ENVIRONMENT CONFIGURATION
# ====================================

# Copy this file to .env.production or .env.staging and fill in your values

# ====================================
# BINANCE API CONFIGURATION
# ====================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# IMPORTANT: Enable "Spot Trading" permission for live trading
VITE_BINANCE_API_KEY=your_binance_api_key_here
VITE_BINANCE_SECRET_KEY=your_binance_secret_key_here

# Set to 'true' for testnet, 'false' for live trading
VITE_BINANCE_TESTNET=true

# ====================================
# TRADING CONFIGURATION
# ====================================
# Environment: production, staging, development
VITE_TRADING_MODE=staging

# Trade amounts in USDT
VITE_MIN_TRADE_AMOUNT=10
VITE_MAX_TRADE_AMOUNT=100

# Risk management (percentages)
VITE_DEFAULT_RISK_PER_TRADE=1.0
VITE_MAX_DAILY_LOSS=5.0

# DANGER ZONE: Set to 'true' only for live trading with real money!
VITE_ENABLE_REAL_TRADING=false

# ====================================
# LOGGING & MONITORING
# ====================================
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL=debug

VITE_ENABLE_MONITORING=true
